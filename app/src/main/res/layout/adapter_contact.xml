<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:padding="8dp" android:background="#f8f8f8"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:textColor="#000000"
        android:id="@+id/text1"
        android:layout_width="match_parent" android:padding="2dp"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Large" />

    <View android:background="#c8c8c8" android:layout_marginTop="5dp"
        android:layout_width="match_parent" android:layout_marginBottom="5dp"
        android:layout_height="1dp"/>

    <TextView android:textColor="#000000"
         android:text="Phone Numbers:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <TextView
        android:id="@+id/text2" android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="2dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Small" />


    <View android:background="#c8c8c8" android:layout_marginTop="5dp"
        android:layout_width="match_parent" android:layout_marginBottom="5dp"
        android:layout_height="1dp"/>

    <TextView
        android:text="Email Address:" android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <TextView
        android:id="@+id/text3" android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="2dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Small" />




</LinearLayout>